{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch-backup",
            "cargo": {
                "args": [
                    "build",
                    "--bin=solrcopy",
                    "--package=solrcopy"
                ]
            },
            "preLaunchTask":  "createTempFolder",
            "program": "${cargo:program}",
            "args": [
                "backup", 
                "--url", "http://localhost:8983/solr", 
                "--from", "demo", 
                "--query", "price:[1 TO 400] AND NOT popularity:10", 
                "--order", "price:asc", "weight:asc", "id:asc",
                "--select", "id", "date", "name", "price", "weight", "popularity", "manu", "cat", "store", "features",
                "--limit", "25", 
                "--into", "./tmp",
                "--docs-per-step", "2", 
                "--max-files", "3", 
                "--readers", "1", 
                "--writers", "1", 
                "--log-level", "debug",
            ],
            "env": { 
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
        }
        , {
            "type": "lldb",
            "request": "launch",
            "name": "Launch-restore",
            "cargo": {
                "args": [
                    "build",
                    "--bin=solrcopy",
                    "--package=solrcopy"
                ]
            },
            "preLaunchTask":  "createTempFolder",
            "program": "${cargo:program}",
            "args": [
                "restore", 
                "--url", "http://localhost:8983/solr", 
                "--from", "./tmp", 
                "--search", "demo", 
                "--into", "target",
                "--commit", "soft",
                "--log-level",  "debug",
            ],
            "env": { 
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
        }
        , {
            "type": "lldb",
            "request": "launch",
            "name": "Launch-commit",
            "cargo": {
                "args": [
                    "build",
                    "--bin=solrcopy",
                    "--package=solrcopy"
                ]
            },
            "program": "${cargo:program}",
            "args": [
                "commit", 
                "--url", "http://localhost:8983/solr", 
                "--into", "target",
                // "--log-level",  "debug",
            ],
            "env": { 
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
        }
        ,{
            "type": "lldb",
            "request": "launch",
            "name": "Unit-tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=solrcopy",
                    "--package=solrcopy"
                ],
                "filter": {
                    "name": "solrcopy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
