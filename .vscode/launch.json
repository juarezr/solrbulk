    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch-backup",
            "cargo": {
                "args": [
                    "build",
                    "--bin=solrbulk",
                    "--package=solrbulk"
                ]
            },
            "preLaunchTask":  "createTempFolder",
            "program": "${cargo:program}",
            "args": [
                "backup", 
                "--url", "http://solr-telematics.ceabsservicos.com.br:8983/solr", 
                "--from", "mileage", 
                "--where", "ownerId:173826", 
                "--order", "date:asc", "id:asc", "vehiclePlate:asc",
                /* "--select", "id,date,vehiclePlate",  */
                "--limit", "200", 
                "--batch", "16", 
                "--into", "./tmp",
                "--verbose", 
            ],
            "env": { 
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
        }
        , {
            "type": "lldb",
            "request": "launch",
            "name": "Launch-restore",
            "cargo": {
                "args": [
                    "build",
                    "--bin=solrbulk",
                    "--package=solrbulk"
                ]
            },
            "preLaunchTask":  "createTempFolder",
            "program": "${cargo:program}",
            "args": [
                "restore", 
                "--url", "http://solr-telematics.ceabsservicos.com.br:8983/solr", 
                "--from", "./tmp", 
                "--into", "mileage",
                "--verbose", 
            ],
            "env": { 
                "RUST_BACKTRACE": "full"
            },
            "cwd": "${workspaceFolder}",
        }
        ,{
            "type": "lldb",
            "request": "launch",
            "name": "Unit-tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=solrbulk",
                    "--package=solrbulk"
                ],
                "filter": {
                    "name": "solrbulk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
